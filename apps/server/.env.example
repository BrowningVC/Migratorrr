# Database
DATABASE_URL="postgresql://migratorrr:migratorrr_dev@localhost:5432/migratorrr"

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info

# ===========================================
# CRITICAL - Required for sniper execution
# ===========================================

# Security - Generate with: openssl rand -hex 32
# Required for encrypting user wallet private keys
MASTER_ENCRYPTION_KEY=

# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=

# Helius API Key - Get from https://dev.helius.xyz/
# Required for RPC access, transaction submission, and migration detection
HELIUS_API_KEY=
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Platform Fee Wallet - MUST be a valid Solana wallet address you control
# This is where the 1% platform fees will be sent
# Example: FEE123456789abcdefghijklmnopqrstuvwxyz12345
PLATFORM_FEE_WALLET=

# ===========================================
# Optional Configuration
# ===========================================

# Backup RPC (recommended for redundancy)
BACKUP_RPC_URL=

# Jito Block Engine (default is mainnet)
JITO_BLOCK_ENGINE_URL=https://mainnet.block-engine.jito.wtf

# Platform fee in basis points (100 = 1%)
PLATFORM_FEE_BPS=100

{
  "name": "migratorrr",
  "version": "0.1.0",
  "private": true,
  "description": "Solana token sniping platform for PumpFun migrations",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web & npm run dev:server",
    "dev:web": "npm -w @migratorrr/web run dev",
    "dev:server": "npm -w @migratorrr/server run dev",
    "build": "npm run build:web && npm run build:server",
    "build:web": "npm -w @migratorrr/web run build",
    "build:server": "npm -w @migratorrr/server run build",
    "start": "npm run db:push && npm -w @migratorrr/server run start",
    "start:server": "npm -w @migratorrr/server run start",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "db:generate": "npm -w @migratorrr/server run db:generate",
    "db:migrate": "npm -w @migratorrr/server run db:migrate",
    "db:push": "npm -w @migratorrr/server run db:push"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
